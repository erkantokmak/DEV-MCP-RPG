# ===========================================
# Dev-RPG Environment Variables
# Copy this file to .env and customize
# ===========================================

# ===========================================
# LLM PROVIDER CONFIGURATION
# ===========================================
# Option 1: Groq API (Recommended - Free tier available)
# Get your API key from: https://console.groq.com/keys
LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Option 2: Ollama (Local - requires GPU)
# Uncomment below and set LLM_PROVIDER=ollama
# OLLAMA_MODEL=llama3

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=dev_rpg
POSTGRES_USER=dev_rpg_user
POSTGRES_PASSWORD=dev_rpg_secret_2026

# ===========================================
# N8N CONFIGURATION
# ===========================================
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# ===========================================
# TIMEZONE
# ===========================================
TZ=Europe/Istanbul

# ===========================================
# QUALITY SETTINGS
# ===========================================
QUALITY_THRESHOLD=50

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_GPU=false
DEBUG_MODE=false
